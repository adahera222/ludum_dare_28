<h1>Listing heroes</h1>

<table>
  <thead>
    <tr>
      <th>Handle</th>
      <th>Hp</th>
      <th>Room</th>
      <th>Sword</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @heroes.each do |hero| %>
      <tr>
        <td><%= hero.handle %></td>
        <td><%= hero.hp %></td>
        <td><%= hero.room %></td>
        <td><%= hero.sword %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

