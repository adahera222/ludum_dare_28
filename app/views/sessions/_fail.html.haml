#fail.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      = form_for @receiver, remote: true do |f|
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
          %h4#myModalLabel.modal-title Give Someone A Heart?
        .modal-body
          .row
            .span5
              .row
                .span2
                  %p
                    You tried to give someone your heart... but they were already gone.
                .span3
                  = f.label :handle
                  %br/
                  = f.text_field :handle
