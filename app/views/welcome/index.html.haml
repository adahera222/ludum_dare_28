.row
  .span12
    = form_tag "/auth/twitter", :method => "get", :html => {:class => "form-horizontal"} do
      %fieldset
        %legend
          = t("app.description_html", :omniauth => t("link.omniauth_html"), :ruby_on_rails => t("link.ruby_on_rails_html"), :sign_in_with_twitter => t("link.sign_in_with_twitter_html"), :twitter_gem => t("link.twitter_gem_html"))
        .row.form-actions
          .span6
            %p.help-block
              = t("help.sign_in")
          .span6
            %button.btn.btn-large.btn-primary
              = t("button.sign_in")
        .row
          %h3 The Legion of the Loved
        .row
          .span6
            %table.table
              %thead
                %tr
                  %th
                    = "Handle"
                  %th
                    = "Hearts"
                  %th
                    = "Last Played"
              %tbody
                - @heroes.each do |h|
                  %tr
                    %td
                      = number_with_delimiter h.handle
                    %td
                      = number_with_delimiter h.hp
                    %td
                      = number_with_delimiter h.updated_at.strftime('%a %d %b %Y')
